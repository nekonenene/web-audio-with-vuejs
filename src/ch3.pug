doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")

    meta(name="description" content="")
    meta(name="keywords"    content="")
    meta(name="author"      content="nekonenene")
    link(rel="shortcut icon" href="./img/favicon.ico")

    //- for Android SmartPhone
    meta(name="theme-color" content="#2b0de8")
    link(rel="icon" href="./img/favicon_192.png" sizes="192x192")

    - var title = "Chapter 3";
    title #{title}

    // Normalize.css
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css")
    // Font Awesome!
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")

    //- My Stylesheets
    link(rel="stylesheet" href="./style/top.css")
  body.bg-light
    main(role="main")
      section.jumbotron.text-center
        .container
          h1.jumbotron-heading #{title}
          p.lead.text-muted
            | 2 OSC のシンセらしく
      .container#app
        .row
          .col-md-12
            button.btn.btn-raised.btn-primary(type="button" v-on:click="playOSC()") {{ isPlaying ? "Stop sound" : "Play sound" }}
        .row
          vco-module(ref="vco1" :audioContext="audioContext" :initial-waveform="square" :destination="audioContext.destination")
        .row.mt-4
          .col-md-3
            .form-group
              label.bmd-label-floating OSC 1
              select.form-control(v-model="osc1.type" v-on:change="reflectNodesSettings()")
                option(value="sine") sine
                option(value="square") square
                option(value="triangle") tri
                option(value="sawtooth") saw
          .col-md-9
            .row
              .col-md-2
                | vol
              .col-md-10
                vue-slider(v-model="gain1.volume" @callback="reflectNodesSettings()" :height="opts.height" :dot-size="opts.dotSize" :tooltip-dir="'right'")
            .row
              .col-md-2
                | detune
              .col-md-10
                vue-slider(v-model="osc1.detune" @callback="reflectNodesSettings()" :height="opts.height" :dot-size="opts.dotSize" :tooltip-dir="'right'" :min="-100" :max="100")
            //-.row
              .col-md-2
                | freq
              .col-md-10
                vue-slider(v-model="osc1.freq" @callback="reflectNodesSettings()" :height="opts.height" :dot-size="opts.dotSize" :tooltip-dir="'right'" :min="430.0" :max="450.0" :interval="0.1")
        .row.mt-4
          .col-md-3
            .form-group
              label.bmd-label-floating OSC 2
              select.form-control(v-model="osc2.type" v-on:change="reflectNodesSettings()")
                option(value="sine") sine
                option(value="square") square
                option(value="triangle") tri
                option(value="sawtooth") saw
          .col-md-9
            .row
              .col-md-2
                | vol
              .col-md-10
                vue-slider(v-model="gain2.volume" @callback="reflectNodesSettings()" :height="opts.height" :dot-size="opts.dotSize" :tooltip-dir="'right'")
            .row
              .col-md-2
                | detune
              .col-md-10
                vue-slider(v-model="osc2.detune" @callback="reflectNodesSettings()" :height="opts.height" :dot-size="opts.dotSize" :tooltip-dir="'right'" :min="-100" :max="100")
            //-.row
              .col-md-2
                | freq
              .col-md-10
                vue-slider(v-model="osc2.freq" @callback="reflectNodesSettings()" :height="opts.height" :dot-size="opts.dotSize" :tooltip-dir="'right'" :min="430.0" :max="450.0" :interval="0.1")
        .row.mt-5
          .col-md-3
            .form-group
              label.bmd-label-floating Master Filter
              select.form-control(v-model="masterFilter.type" v-on:change="reflectNodesSettings()")
                option(value="allpass") allpass
                option(value="lowpass") lowpass
                option(value="highpass") highpass
                option(value="bandpass") bandpass
                option(value="notch") notch
          .col-md-9
            .row
              .col-md-2
                | freq
              .col-md-10
                vue-slider(v-model="masterFilter.freq" @callback="reflectNodesSettings()" :height="opts.height" :dot-size="opts.dotSize" :tooltip-dir="'right'" :min="masterFilter.obj.frequency.minValue" :max="8000" :interval="0.01")
            .row
              .col-md-2
                | Q
              .col-md-10
                vue-slider(v-model="masterFilter.q" @callback="reflectNodesSettings()" :height="opts.height" :dot-size="opts.dotSize" :tooltip-dir="'right'" :min="0.01" :max="20" :interval="0.01")
        .row.mt-3
          .col-md-3
            | Master Volume
          .col-md-9
            vue-slider(v-model="masterGain.volume" @callback="reflectNodesSettings()" :height="opts.height" :dot-size="opts.dotSize")
        .row.mt-2
          .col-md-3
            | Panpot
          .col-md-9
            vue-slider(v-model="masterPanner.pan" @callback="reflectNodesSettings()" :height="opts.height" :dot-size="opts.dotSize" :min="-100" :max="100")

    footer.container.text-right.mt-5
      a(href="http://hato-neko.x0.com" target="_blank" title="ハトネコエセンター").
        ハトネコエ
      | &nbsp;
      a(href="https://twitter.com/nekonenene" target="_blank" title="Twitter: nekonenene").
        (@nekonenene)

